{
  "name": "@rxts/vue",
  "version": "0.0.0",
  "description": "Make Vue greater with RxTS.",
  "repository": "git@github.com:rx-ts/vue.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:r build:ts build:docs",
    "build:docs": "vuepress build",
    "build:r": "r -e named -p",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "dev": "vuepress dev",
    "lint": "run-p lint:*",
    "lint:es": "cross-env PARSER_NO_WATCH=true eslint . --cache --ext js,md,mdx,ts,tsx,vue -f friendly",
    "lint:style": "stylelint '.vuepress/**/*.{scss,vue}'",
    "lint:tsc": "tsc",
    "postinstall": "yarn-deduplicate || exit 0",
    "start": "serve dist",
    "test": "cross-env NODE_ENV=development jest",
    "type-coverage": "type-coverage --cache --detail --ignore-catch --ignore-files '**/*.d.ts'"
  },
  "devDependencies": {
    "@1stg/app-config": "^0.1.23",
    "@1stg/lib-config": "^0.1.21",
    "@d-ts/vue": "^0.4.2",
    "@types/jest": "^25.1.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.5.2",
    "@types/qrcode": "^1.3.4",
    "@types/webpack": "^4.41.3",
    "@vue/test-utils": "^1.0.0-beta.31",
    "lerna": "^3.20.2",
    "lodash-es": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "react": "^16.12.0",
    "rimraf": "^3.0.1",
    "rxjs": "^6.5.4",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "serve": "^11.3.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "type-coverage": "^2.4.0",
    "typescript": "^3.7.5",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "vuepress": "^1.2.0",
    "vuepress-plugin-typescript": "^0.1.1",
    "vuepress-types": "^0.8.0",
    "yarn-deduplicate": "^1.1.1"
  },
  "resolutions": {
    "@babel/core": "^7.8.3",
    "imagemin-gifsicle": "^6.0.1",
    "webpack-chain": "^6.3.1"
  },
  "babel": {
    "presets": [
      [
        "@1stg",
        {
          "typescript": true,
          "vue": true
        }
      ]
    ]
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "typeCoverage": {
    "atLeast": 98.6
  }
}
