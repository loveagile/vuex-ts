{
  "name": "@rxts/vue",
  "version": "0.0.0",
  "description": "Make Vue greater with RxTS.",
  "repository": "git@github.com:rx-ts/vue.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "parcel packages/*/docs/index.html",
    "lint:es": "EFF_NO_LINK_RULES=true eslint . --ext js,md,mdx,ts,tsx -f friendly",
    "lint:style": "stylelint **/*.scss",
    "lint": "run-p lint:*",
    "build:es": "tsc -b --force",
    "build:bundle": "rollup -c node_modules/@1stg/rollup-config/module.js",
    "build:bundle:min": "cross-env NODE_ENV=production yarn build:bundle",
    "build:docs": "parcel build packages/*/docs/index.html",
    "build": "rimraf dist packages/*/lib && run-p build:**",
    "serve": "serve dist",
    "type-coverage": "type-coverage --cache --ignore-catch --detail --ignore-files *.d.ts --strict"
  },
  "devDependencies": {
    "@1stg/babel-preset": "^0.6.0",
    "@1stg/browserslist-config": "^0.2.1",
    "@1stg/eslint-config": "^0.8.1",
    "@1stg/husky-config": "^0.3.0",
    "@1stg/lint-staged": "^0.6.0",
    "@1stg/postcss-config": "^0.2.0",
    "@1stg/prettier-config": "^0.2.0",
    "@1stg/rollup-config": "^0.4.1",
    "@1stg/stylelint-config": "^0.6.0",
    "@1stg/tsconfig": "^0.4.0",
    "@1stg/tslint-config": "^0.3.0",
    "@babel/core": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/classnames": "^2.2.9",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.4",
    "@types/qrcode": "^1.3.4",
    "autoprefixer": "^9.6.1",
    "browserslist": "^4.7.0",
    "classnames": "^2.2.6",
    "core-js": "^3.2.1",
    "cross-env": "^5.2.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.3.0",
    "eslint-formatter-friendly": "^7.0.0",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.5",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "postcss": "^7.0.18",
    "prettier": "^1.18.2",
    "qrcode": "^1.4.1",
    "qrious": "^4.0.2",
    "remark-preset-lint-consistent": "^2.0.3",
    "remark-preset-lint-markdown-style-guide": "^2.1.3",
    "remark-preset-lint-recommended": "^3.0.3",
    "remark-preset-prettier": "^0.1.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.20.3",
    "rxjs": "^6.5.3",
    "sanitize.css": "^11.0.0",
    "sass": "^1.23.0-module.beta.1",
    "serve": "^11.1.0",
    "stylelint": "^10.1.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "type-coverage": "^2.2.0",
    "typescript": "^3.6.2",
    "vue": "^2.6.10",
    "vue-qrcode": "link:packages/vue-qrcode/src",
    "vue-qrious": "link:packages/vue-qrious/src"
  },
  "alias": {
    "vue": "./node_modules/vue/dist/vue.esm"
  },
  "babel": {
    "presets": [
      "@1stg"
    ]
  },
  "browserslist": [
    "extends @1stg/browserslist-config/modern"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintIgnore": [
    ".cache",
    ".parcel-cache",
    "dist",
    "lib",
    "packages/*/CHANGELOG.md"
  ],
  "prettier": "@1stg/prettier-config/vue",
  "renovate": {
    "extends": "@1stg"
  },
  "stylelint": {
    "extends": "@1stg/stylelint-config/scss"
  },
  "typeCoverage": {
    "atLeast": 100
  }
}
