{
  "name": "@rxts/vue",
  "version": "0.0.0",
  "description": "Make Vue greater with RxTS.",
  "repository": "git@github.com:rx-ts/vue.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:r build:ts build:docs",
    "build:docs": "vuepress build",
    "build:r": "r -e named -p",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "dev": "vuepress dev",
    "lint": "run-p lint:*",
    "lint:es": "cross-env EFF_NO_LINK_RULESPARSER_NO_WATCH=true eslint . --cache -f friendly",
    "lint:style": "stylelint --cache '.vuepress/**/*.{scss,vue}'",
    "lint:tsc": "tsc",
    "postinstall": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "release": "changeset publish",
    "start": "serve dist",
    "test": "cross-env NODE_ENV=development jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/app-config": "^1.5.3",
    "@1stg/lib-config": "^1.2.11",
    "@changesets/cli": "^2.16.0",
    "@d-ts/vue": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.1",
    "@types/qrcode": "^1.4.0",
    "@vue/test-utils": "^1.1.4",
    "lodash": "^4.17.20",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "qrcode": "^1.4.4",
    "qrious": "^4.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.0.0",
    "sass": "^1.32.12",
    "sass-loader": "^10.1.1",
    "serve": "^11.3.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "type-coverage": "^2.17.5",
    "typescript": "^4.2.4",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12",
    "vuepress": "^1.8.2",
    "vuepress-plugin-typescript": "^0.3.1",
    "vuepress-types": "^0.9.4",
    "yarn-deduplicate": "^3.1.0"
  },
  "resolutions": {
    "@babel/core": "^7.12.3",
    "prettier": "^2.2.1"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "typeCoverage": {
    "atLeast": 99.37,
    "cache": true,
    "detail": true,
    "ignoreCatch": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "*.d.ts"
    ],
    "ignoreNonNullAssertion": true,
    "strict": true,
    "update": true
  }
}
