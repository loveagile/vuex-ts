{
  "name": "@rxts/vue",
  "version": "0.0.0",
  "description": "Make Vue greater with RxTS.",
  "repository": "git@github.com:rx-ts/vue.git",
  "author": "JounQin <admin@1stg.me>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:r": "r -e named -f cjs",
    "build:ts": "tsc -b",
    "clean": "rimraf dist packages/*/{lib,*.tsbuildinfo}",
    "docs:build": "vitepress build .",
    "docs:dev": "vitepress dev .",
    "docs:serve": "vitepress serve . --port 8000",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly",
    "lint:tsc": "vue-tsc --incremental false --noEmit",
    "prepare": "simple-git-hooks && yarn-deduplicate --strategy fewer || exit 0",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "test": "jest",
    "typecov": "type-coverage"
  },
  "devDependencies": {
    "@1stg/app-config": "^3.5.0",
    "@1stg/lib-config": "^5.5.0",
    "@changesets/changelog-github": "^0.4.4",
    "@changesets/cli": "^2.22.0",
    "@d-ts/vue": "^1.0.0",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.23",
    "@types/qrcode": "^1.4.2",
    "@vue/test-utils": "^2.0.0-rc.18",
    "lodash-es": "^4.17.21",
    "postcss": "^8.4.12",
    "qrcode": "^1.5.0",
    "qrious": "^4.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "sass": "^1.49.11",
    "sass-loader": "^12.6.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.2.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "type-coverage": "^2.21.1",
    "typescript": "^4.4.2",
    "vitepress": "^0.22.3",
    "vue": "^3.2.31",
    "vue-tsc": "^0.33.9"
  },
  "resolutions": {
    "prettier": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest"
  },
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreFiles": [
      "**/*.d.ts"
    ],
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
